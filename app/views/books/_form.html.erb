<div class="container">  
  <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <%= book.errors.full_messages.join(', ') %></li>
      </div>
    <% end %>

     <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :author_name %><br>
      <%= f.text_field :author_name %>
    </div>

    <div class="field">
      <%= f.label :edition %><br>
      <%= f.number_field :edition, step: :any %>
    </div>

    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price, step: :any %>
    </div>

    <div class="field date-select">
      <%= f.label :published_date %><br>
      <%= f.date_select :published_date %>
    </div>

    <div class="field">
      <%= hidden_field_tag 'book[category_ids][]', nil%>
      <label>Select Category of this book: </label><br>
      <% @categories.each do |cat| %>
      <%= check_box_tag 'book[category_ids][]', cat.id, @book.categories.include?(cat)%>
      <%= cat.name%><br>
      <%end%>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>  
