<div class="book-list">
  <p id="notice"><%= notice %></p>
  <%= form_tag(books_path, method: 'get') do %>
    <%= text_field_tag :criteria, params[:criteria], placeholder: 'Enter book name to search'%>
    <%= submit_tag 'Search', name: nil%>
  <% end%>
  <h1>All Books</h1>
  <table id='bookList'>
    <thead>
      <tr>
        <td> Book Name</td>
        <td> Category ids</td>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= get_category_names(book) %></td>
         <!--  <td><%= link_to 'Show', book %></td>
          <td><%##= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
<end>
<%= link_to 'New Book', new_book_path %>
