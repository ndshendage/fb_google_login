
<div class="container">
  <table class="table table-bordered table-striped">
  <thead>
    <tr>
    	<th class="text-center" colspan="2"> Details of Book</th>
    </tr>
    <tr>
      <th class="text-center">Book Name</th>
      <td class="text-center"><%= @book.name %></th>
    </tr>
    <tr>
      <th class="text-center">Author Name</th>
      <td class="text-center"><%= @book.author_name %></th>
    </tr>
    <tr>
      <th class="text-center">Edition</th>
      <td class="text-center"><%= @book.edition %></th>
    </tr>
    <tr>
      <th class="text-center">Catagory Names</th>
      <td class="text-center"><%= get_category_names(@book) %></th>
    </tr>
    <tr>
      <th class="text-center">Price($)</th>
      <td class="text-center"><%= @book.price %></th>
    </tr>
    <tr>
      <th class="text-center">Description</th>
      <td class="text-center"><%= @book.description %></th>
    </tr>
    <td class="text-center" colspan="2"> <%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %> </td>
  </thead>
</table>
